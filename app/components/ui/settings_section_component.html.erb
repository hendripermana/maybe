<%# Modern settings section component using Card component %>
<%= render Ui::CardComponent.new(variant: :default, size: :md, class: "w-full") do %>
  <% if title.present? || subtitle.present? || actions? %>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-4">
      <div>
        <% if title.present? %>
          <h2 class="text-lg font-medium text-primary"><%= title %></h2>
        <% end %>
        <% if subtitle.present? %>
          <p class="text-sm text-secondary mt-1"><%= subtitle %></p>
        <% end %>
      </div>
      <% if actions? %>
        <div class="flex items-center gap-2 shrink-0">
          <%= actions %>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <div class="settings-section-content">
    <%= content %>
  </div>
<% end %>