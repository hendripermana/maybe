<div class="theme-preview rounded-lg overflow-hidden border border-border" data-theme="<%= theme %>">
  <div class="p-4">
    <!-- Header -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center gap-2">
        <div class="w-8 h-8 rounded-full bg-primary"></div>
        <div class="font-medium text-primary">Theme Preview</div>
      </div>
      <div class="flex gap-1">
        <div class="w-3 h-3 rounded-full bg-destructive"></div>
        <div class="w-3 h-3 rounded-full bg-warning"></div>
        <div class="w-3 h-3 rounded-full bg-success"></div>
      </div>
    </div>
    
    <!-- Content -->
    <div class="space-y-3 mb-4">
      <div class="h-2 w-full bg-muted rounded"></div>
      <div class="h-2 w-5/6 bg-muted rounded"></div>
      <div class="h-2 w-4/6 bg-muted rounded"></div>
    </div>
    
    <!-- Card -->
    <div class="p-3 rounded-md border border-border bg-card mb-4">
      <div class="flex items-center gap-2 mb-2">
        <div class="w-6 h-6 rounded-full bg-primary"></div>
        <div class="h-2 w-24 bg-primary rounded"></div>
      </div>
      <div class="space-y-2">
        <div class="h-2 w-full bg-muted rounded"></div>
        <div class="h-2 w-3/4 bg-muted rounded"></div>
      </div>
    </div>
    
    <!-- Buttons -->
    <div class="flex gap-2">
      <div class="h-8 px-3 rounded flex items-center justify-center bg-primary text-primary-foreground text-xs">Primary</div>
      <div class="h-8 px-3 rounded flex items-center justify-center bg-secondary text-secondary-foreground text-xs">Secondary</div>
      <div class="h-8 px-3 rounded flex items-center justify-center bg-destructive text-destructive-foreground text-xs">Danger</div>
    </div>
  </div>
</div>