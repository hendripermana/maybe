<%= tag.div(**html_attributes) do %>
  <% if title %>
    <h5 class="mb-1 font-medium leading-none tracking-tight">
      <%= title %>
    </h5>
  <% end %>
  
  <% if description %>
    <div class="text-sm [&_p]:leading-relaxed">
      <%= description %>
    </div>
  <% end %>
  
  <%= content %>
<% end %> 