<div class="<%= container_classes %>" role="alert" <%= options[:id] ? "id=#{options[:id]}" : "" %>>
  <%= helpers.icon icon_name, size: "sm", color: icon_color, class: "shrink-0 mt-0.5" %>

  <div class="flex-1">
    <% if title.present? %>
      <h3 class="font-medium mb-1"><%= title %></h3>
    <% end %>
    <div class="<%= title.present? ? 'text-sm opacity-90' : '' %>">
      <%= content %>
    </div>
  </div>

  <% if dismissible %>
    <button type="button" class="shrink-0 text-current opacity-70 hover:opacity-100 focus:opacity-100 transition-opacity" 
            aria-label="Dismiss" 
            data-action="click->ui--alert#dismiss">
      <%= helpers.icon "x", size: "sm" %>
    </button>
  <% end %>
</div>