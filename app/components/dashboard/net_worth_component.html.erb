<div class="space-y-6">
  <!-- Header with Value and Period Selector -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
    <div class="space-y-2">
      <div class="flex items-baseline gap-3">
        <span class="text-3xl lg:text-4xl font-bold text-gray-900">
          <%= current_value %>
        </span>
        <% if trend_data %>
          <div class="flex items-center gap-1 text-sm">
            <% if trend_data.direction == "up" %>
              <span class="text-green-600">â†— +<%= trend_data.percent_formatted %></span>
            <% elsif trend_data.direction == "down" %>
              <span class="text-red-600">â†˜ <%= trend_data.percent_formatted %></span>
            <% else %>
              <span class="text-gray-500">â†’ 0%</span>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <p class="text-sm text-gray-600">
        vs. <%= period.comparison_label.downcase %>
      </p>
    </div>
    
    <!-- Period Selector -->
    <div class="flex items-center gap-1 bg-gray-100 p-1 rounded-lg">
      <% periods.each do |period_option| %>
        <%= link_to period_option[:label], 
            request.path + "?period=#{period_option[:key]}", 
            class: [
              "px-3 py-1.5 text-sm font-medium rounded-md transition-colors",
              period_active?(period_option[:key]) ? 
                "bg-white text-gray-900 shadow-sm" : 
                "text-gray-600 hover:text-gray-900 hover:bg-white/50"
            ].join(" "),
            data: { turbo_frame: "net-worth-chart" } %>
      <% end %>
    </div>
  </div>

  <!-- Chart Area -->
  <div class="relative">
    <% if has_data? %>
      <div class="w-full h-80 bg-gradient-to-br from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-4">
        <div
          id="netWorthChart"
          class="w-full h-full bg-white rounded border border-gray-200"
          data-controller="time-series-chart"
          data-time-series-chart-data-value="<%= chart_data %>">
        </div>
      </div>
    <% else %>
      <div class="w-full h-80 flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 border border-gray-200 rounded-lg">
        <div class="text-center space-y-4 max-w-sm">
          <div class="w-16 h-16 mx-auto bg-gray-200 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <div class="space-y-2">
            <h3 class="font-semibold text-gray-900">No data available</h3>
            <p class="text-sm text-gray-600">
              Add accounts and transactions to start tracking your net worth over time
            </p>
          </div>
          <div class="flex flex-col sm:flex-row gap-2 justify-center">
            <a href="<%= new_account_path %>" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors">
              Add account
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Stats -->
  <% if has_data? %>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-6">
      <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-center">
        <p class="text-sm text-green-700 font-medium">Assets</p>
        <p class="text-lg font-bold text-green-900">
          <%= balance_sheet.assets.total_money.format %>
        </p>
      </div>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
        <p class="text-sm text-red-700 font-medium">Liabilities</p>
        <p class="text-lg font-bold text-red-900">
          <%= balance_sheet.liabilities.total_money.format %>
        </p>
      </div>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-center">
        <p class="text-sm text-blue-700 font-medium">Net Worth</p>
        <p class="text-lg font-bold text-blue-900">
          <%= balance_sheet.net_worth_money.format %>
        </p>
      </div>
    </div>
  <% end %>
</div>
    
    <!-- Period Selector -->
    <div class="flex items-center gap-1 bg-muted/50 p-1 rounded-lg">
      <% periods.each do |period_option| %>
        <%= link_to period_option[:label], 
            request.path + "?period=#{period_option[:key]}", 
            class: class_names(
              "px-3 py-1.5 text-sm font-medium rounded-md transition-colors",
              period_active?(period_option[:key]) ? 
                "bg-background text-foreground shadow-sm" : 
                "text-muted-foreground hover:text-foreground hover:bg-background/50"
            ),
            data: { turbo_frame: "net-worth-chart" } %>
      <% end %>
    </div>
  </div>

  <!-- Chart Area -->
  <div class="relative">
    <% begin %>
      <% if has_data? %>
        <div class="w-full h-96 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <p class="text-blue-800">Chart would go here - Data available: <%= net_worth_series.count %> points</p>
          <div
            id="netWorthChart"
            class="w-full h-80 bg-white rounded border"
            data-controller="time-series-chart"
            data-time-series-chart-data-value="<%= chart_data %>"
            style="height: 300px;">
          </div>
        </div>
      <% else %>
        <div class="w-full h-96 flex items-center justify-center bg-gray-50 border border-gray-200 rounded-lg">
          <div class="text-center space-y-4 max-w-sm">
            <div class="w-20 h-20 mx-auto bg-gray-200 rounded-full flex items-center justify-center">
              ðŸ“ˆ
            </div>
            <div class="space-y-2">
              <h3 class="font-semibold text-gray-900">No data available</h3>
              <p class="text-sm text-gray-600">
                Add accounts and transactions to start tracking your net worth over time
              </p>
            </div>
            <div class="flex flex-col sm:flex-row gap-2 justify-center">
              <a href="<%= new_account_path %>" class="bg-blue-600 text-white px-4 py-2 rounded text-sm">
                Add account
              </a>
            </div>
          </div>
        </div>
      <% end %>
    <% rescue => e %>
      <div class="w-full h-96 bg-red-50 border border-red-200 rounded-lg p-4">
        <p class="text-red-800">Error rendering chart: <%= e.message %></p>
        <pre class="text-xs text-red-600 mt-2"><%= e.backtrace.first(5).join("\n") %></pre>
      </div>
    <% end %>
  </div>

  <!-- Quick Stats -->
  <% if has_data? %>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="bg-muted/30 rounded-lg p-4 text-center">
        <p class="text-sm text-muted-foreground">Assets</p>
        <p class="text-lg font-semibold text-foreground">
          <%= balance_sheet.assets.total_money.format %>
        </p>
      </div>
      <div class="bg-muted/30 rounded-lg p-4 text-center">
        <p class="text-sm text-muted-foreground">Liabilities</p>
        <p class="text-lg font-semibold text-foreground">
          <%= balance_sheet.liabilities.total_money.format %>
        </p>
      </div>
      <div class="bg-muted/30 rounded-lg p-4 text-center">
        <p class="text-sm text-muted-foreground">Net Worth</p>
        <p class="text-lg font-semibold text-foreground">
          <%= balance_sheet.net_worth_money.format %>
        </p>
      </div>
    </div>
  <% end %>
</div>