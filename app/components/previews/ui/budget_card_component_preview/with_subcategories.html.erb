<div class="space-y-8 p-4">
  <div>
    <h3 class="text-lg font-medium mb-2">Parent Category</h3>
    <% 
      budget = OpenStruct.new(id: 1)
      category = OpenStruct.new(
        id: 4, 
        name: "Food", 
        color: "#2196F3", 
        lucide_icon: "coffee",
        parent_id: nil
      )
      
      budget_category = OpenStruct.new(
        id: 4,
        budget: budget,
        category: category,
        budgeted_spending: 30000,
        actual_spending: 25000,
        available_to_spend: 5000,
        initialized?: true,
        percent_of_budget_spent: 83,
        budgeted_spending_money: Money.new(30000, "USD"),
        actual_spending_money: Money.new(25000, "USD"),
        available_to_spend_money: Money.new(5000, "USD")
      )
      
      def budget_category.subcategory?
        false
      end
    %>
    <%= render UI::BudgetCardComponent.new(budget_category: budget_category) %>
  </div>

