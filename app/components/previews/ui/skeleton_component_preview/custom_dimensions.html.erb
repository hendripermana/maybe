<div class="space-y-6">
  <div>
    <h3 class="text-lg font-medium mb-2">Width Options</h3>
    <div class="space-y-4">
      <div>
        <p class="text-sm text-muted-foreground mb-1">Full width (100%)</p>
        <%= render Ui::SkeletonComponent.new(width: "100%", height: "20px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Percentage width (75%)</p>
        <%= render Ui::SkeletonComponent.new(width: "75%", height: "20px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Percentage width (50%)</p>
        <%= render Ui::SkeletonComponent.new(width: "50%", height: "20px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Fixed width (200px)</p>
        <%= render Ui::SkeletonComponent.new(width: "200px", height: "20px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Fixed width (100px)</p>
        <%= render Ui::SkeletonComponent.new(width: "100px", height: "20px") %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Height Options</h3>
    <div class="space-y-4">
      <div>
        <p class="text-sm text-muted-foreground mb-1">Small height (12px)</p>
        <%= render Ui::SkeletonComponent.new(width: "100%", height: "12px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Default height (20px)</p>
        <%= render Ui::SkeletonComponent.new(width: "100%", height: "20px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Medium height (32px)</p>
        <%= render Ui::SkeletonComponent.new(width: "100%", height: "32px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Large height (48px)</p>
        <%= render Ui::SkeletonComponent.new(width: "100%", height: "48px") %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Square and Circle Skeletons</h3>
    <div class="flex flex-wrap gap-4">
      <div>
        <p class="text-sm text-muted-foreground mb-1">Small square (24x24px)</p>
        <%= render Ui::SkeletonComponent.new(width: "24px", height: "24px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Medium square (48x48px)</p>
        <%= render Ui::SkeletonComponent.new(width: "48px", height: "48px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Large square (96x96px)</p>
        <%= render Ui::SkeletonComponent.new(width: "96px", height: "96px") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Small circle (24x24px)</p>
        <%= render Ui::SkeletonComponent.new(width: "24px", height: "24px", rounded: true) %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Medium circle (48x48px)</p>
        <%= render Ui::SkeletonComponent.new(width: "48px", height: "48px", rounded: true) %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Large circle (96x96px)</p>
        <%= render Ui::SkeletonComponent.new(width: "96px", height: "96px", rounded: true) %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Custom Shapes</h3>
    <div class="space-y-4">
      <div>
        <p class="text-sm text-muted-foreground mb-1">Button shape</p>
        <%= render Ui::SkeletonComponent.new(width: "120px", height: "40px", class: "rounded-md") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Badge shape</p>
        <%= render Ui::SkeletonComponent.new(width: "60px", height: "24px", class: "rounded-full") %>
      </div>
      
      <div>
        <p class="text-sm text-muted-foreground mb-1">Image shape</p>
        <%= render Ui::SkeletonComponent.new(width: "200px", height: "150px", class: "rounded-lg") %>
      </div>
    </div>
  </div>
</div>