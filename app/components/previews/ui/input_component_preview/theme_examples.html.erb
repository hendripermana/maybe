<div class="space-y-8">
  <div>
    <h3 class="text-lg font-medium mb-2">Light Theme (Default)</h3>
    <div class="p-4 border rounded-lg bg-white">
      <div class="space-y-4">
        <%= render Ui::InputComponent.new(
          label: "Username",
          placeholder: "Enter your username"
        ) %>
        
        <%= render Ui::InputComponent.new(
          label: "Email",
          type: "email",
          placeholder: "user@example.com"
        ) %>
        
        <%= render Ui::InputComponent.new(
          label: "Password",
          type: "password",
          placeholder: "Enter your password"
        ) %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Dark Theme</h3>
    <div class="p-4 border rounded-lg bg-gray-900" data-theme="dark">
      <div class="space-y-4">
        <%= render Ui::InputComponent.new(
          label: "Username",
          placeholder: "Enter your username"
        ) %>
        
        <%= render Ui::InputComponent.new(
          label: "Email",
          type: "email",
          placeholder: "user@example.com"
        ) %>
        
        <%= render Ui::InputComponent.new(
          label: "Password",
          type: "password",
          placeholder: "Enter your password"
        ) %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Theme Switching</h3>
    <p class="mb-2">This component uses CSS variables for theming and automatically adapts to the current theme.</p>
    <div class="p-4 border rounded-lg" data-controller="theme-preview">
      <%= render Ui::ThemeToggleComponent.new %>
      <div class="mt-4 space-y-4">
        <%= render Ui::InputComponent.new(
          label: "Username",
          placeholder: "Enter your username"
        ) %>
        
        <%= render Ui::InputComponent.new(
          label: "Email",
          type: "email",
          placeholder: "user@example.com",
          required: true
        ) %>
        
        <%= render Ui::InputComponent.new(
          label: "Password",
          type: "password",
          placeholder: "Enter your password",
          help_text: "Password must be at least 8 characters"
        ) %>
        
        <%= render Ui::InputComponent.new(
          label: "Invalid Input",
          value: "invalid-value",
          error: "This field contains an error"
        ) %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">All Variants in Both Themes</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="p-4 border rounded-lg bg-white">
        <h4 class="font-medium mb-2">Light Theme</h4>
        <div class="space-y-4">
          <%= render Ui::InputComponent.new(
            label: "Default",
            variant: :default,
            placeholder: "Default variant"
          ) %>
          
          <%= render Ui::InputComponent.new(
            label: "Outline",
            variant: :outline,
            placeholder: "Outline variant"
          ) %>
          
          <%= render Ui::InputComponent.new(
            label: "Ghost",
            variant: :ghost,
            placeholder: "Ghost variant"
          ) %>
          
          <%= render Ui::InputComponent.new(
            label: "Filled",
            variant: :filled,
            placeholder: "Filled variant"
          ) %>
        </div>
      </div>
      
      <div class="p-4 border rounded-lg bg-gray-900" data-theme="dark">
        <h4 class="font-medium mb-2 text-white">Dark Theme</h4>
        <div class="space-y-4">
          <%= render Ui::InputComponent.new(
            label: "Default",
            variant: :default,
            placeholder: "Default variant"
          ) %>
          
          <%= render Ui::InputComponent.new(
            label: "Outline",
            variant: :outline,
            placeholder: "Outline variant"
          ) %>
          
          <%= render Ui::InputComponent.new(
            label: "Ghost",
            variant: :ghost,
            placeholder: "Ghost variant"
          ) %>
          
          <%= render Ui::InputComponent.new(
            label: "Filled",
            variant: :filled,
            placeholder: "Filled variant"
          ) %>
        </div>
      </div>
    </div>
  </div>
</div>