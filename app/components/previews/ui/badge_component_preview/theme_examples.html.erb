<div class="space-y-8">
  <div>
    <h3 class="text-lg font-medium mb-2">Light Theme (Default)</h3>
    <div class="p-4 border rounded-lg bg-white">
      <div class="flex flex-wrap gap-2">
        <%= render Ui::BadgeComponent.new(variant: :default) { "Default" } %>
        <%= render Ui::BadgeComponent.new(variant: :primary) { "Primary" } %>
        <%= render Ui::BadgeComponent.new(variant: :secondary) { "Secondary" } %>
        <%= render Ui::BadgeComponent.new(variant: :success) { "Success" } %>
        <%= render Ui::BadgeComponent.new(variant: :warning) { "Warning" } %>
        <%= render Ui::BadgeComponent.new(variant: :destructive) { "Destructive" } %>
        <%= render Ui::BadgeComponent.new(variant: :outline) { "Outline" } %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Dark Theme</h3>
    <div class="p-4 border rounded-lg bg-gray-900" data-theme="dark">
      <div class="flex flex-wrap gap-2">
        <%= render Ui::BadgeComponent.new(variant: :default) { "Default" } %>
        <%= render Ui::BadgeComponent.new(variant: :primary) { "Primary" } %>
        <%= render Ui::BadgeComponent.new(variant: :secondary) { "Secondary" } %>
        <%= render Ui::BadgeComponent.new(variant: :success) { "Success" } %>
        <%= render Ui::BadgeComponent.new(variant: :warning) { "Warning" } %>
        <%= render Ui::BadgeComponent.new(variant: :destructive) { "Destructive" } %>
        <%= render Ui::BadgeComponent.new(variant: :outline) { "Outline" } %>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Theme Switching</h3>
    <p class="mb-2">This component uses CSS variables for theming and automatically adapts to the current theme.</p>
    <div class="p-4 border rounded-lg" data-controller="theme-preview">
      <%= render Ui::ThemeToggleComponent.new %>
      <div class="mt-4">
        <div class="flex flex-wrap gap-2">
          <%= render Ui::BadgeComponent.new(variant: :default) { "Default" } %>
          <%= render Ui::BadgeComponent.new(variant: :primary) { "Primary" } %>
          <%= render Ui::BadgeComponent.new(variant: :secondary) { "Secondary" } %>
          <%= render Ui::BadgeComponent.new(variant: :success) { "Success" } %>
          <%= render Ui::BadgeComponent.new(variant: :warning) { "Warning" } %>
          <%= render Ui::BadgeComponent.new(variant: :destructive) { "Destructive" } %>
          <%= render Ui::BadgeComponent.new(variant: :outline) { "Outline" } %>
        </div>
      </div>
    </div>
  </div>
  
  <div>
    <h3 class="text-lg font-medium mb-2">Contrast Comparison</h3>
    <p class="mb-2">Badges maintain proper contrast in both themes for accessibility.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <h4 class="font-medium mb-2">Light Theme</h4>
        <div class="p-4 bg-white border rounded-lg">
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-2">
              <%= render Ui::BadgeComponent.new(variant: :primary) { "Primary" } %>
              <span class="text-sm text-muted-foreground">High contrast on light background</span>
            </div>
            
            <div class="flex items-center gap-2">
              <%= render Ui::BadgeComponent.new(variant: :destructive) { "Destructive" } %>
              <span class="text-sm text-muted-foreground">Error state visible in light theme</span>
            </div>
            
            <div class="flex items-center gap-2">
              <%= render Ui::BadgeComponent.new(variant: :outline) { "Outline" } %>
              <span class="text-sm text-muted-foreground">Subtle styling for secondary information</span>
            </div>
          </div>
        </div>
      </div>
      
      <div>
        <h4 class="font-medium mb-2">Dark Theme</h4>
        <div class="p-4 bg-gray-900 border rounded-lg" data-theme="dark">
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-2">
              <%= render Ui::BadgeComponent.new(variant: :primary) { "Primary" } %>
              <span class="text-sm text-muted-foreground">High contrast on dark background</span>
            </div>
            
            <div class="flex items-center gap-2">
              <%= render Ui::BadgeComponent.new(variant: :destructive) { "Destructive" } %>
              <span class="text-sm text-muted-foreground">Error state visible in dark theme</span>
            </div>
            
            <div class="flex items-center gap-2">
              <%= render Ui::BadgeComponent.new(variant: :outline) { "Outline" } %>
              <span class="text-sm text-muted-foreground">Subtle styling for secondary information</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>