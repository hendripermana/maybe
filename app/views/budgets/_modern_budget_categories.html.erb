<%# locals: (budget:) %>

<div>
  <div class="flex items-center gap-1.5 px-4 py-2 text-xs font-medium text-muted-foreground uppercase">
    <p>Categories</p>
    <span class="text-muted-foreground">&middot;</span>
    <p><%= budget.budget_categories.count %></p>
  </div>

  <div class="space-y-4 p-4">
    <% if budget.family.categories.expenses.empty? %>
      <div class="py-8">
        <%= render "budget_categories/no_categories" %>
      </div>
    <% else %>
      <% category_groups = BudgetCategory::Group.for(budget.budget_categories) %>

      <% category_groups.each_with_index do |group, index| %>
        <div>
          <%= render "budget_categories/modern_budget_category", budget_category: group.budget_category %>

          <div>
            <% group.budget_subcategories.each do |budget_subcategory| %>
              <div class="w-full flex items-center mt-2">
                <div class="ml-8 flex items-center justify-center text-muted-foreground">
                  <%= icon "corner-down-right" %>
                </div>

                <div class="w-full">
                  <%= render "budget_categories/modern_budget_category", budget_category: budget_subcategory %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <% if index < category_groups.size - 1 %>
          <hr class="border-border my-4" />
        <% end %>
      <% end %>

      <hr class="border-border my-4" />
      <%= render "budget_categories/modern_budget_category", budget_category: budget.uncategorized_budget_category %>
    <% end %>
  </div>
</div>