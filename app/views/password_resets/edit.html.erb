<%
  header_title t(".title")
%>

<%= render Ui::CardComponent.new(
  variant: :elevated,
  size: :lg,
  class: "max-w-md mx-auto mt-8"
) do %>
  <%= form_with model: @user, url: password_reset_path(token: params[:token]), method: :patch, class: "space-y-4" do |form| %>
    <div class="form-field">
      <div class="form-field__body">
        <%= form.label :password, "New password", class: "form-field__label" %>
        <%= form.password_field :password, 
            class: "form-field__input", 
            placeholder: "Enter new password",
            required: true %>
      </div>
    </div>

    <div class="form-field">
      <div class="form-field__body">
        <%= form.label :password_confirmation, "Confirm password", class: "form-field__label" %>
        <%= form.password_field :password_confirmation, 
            class: "form-field__input", 
            placeholder: "Confirm new password",
            required: true %>
      </div>
    </div>

    <%= render Ui::ButtonComponent.new(
      text: "Update password",
      variant: :primary,
      type: "submit",
      full_width: true
    ) %>
  <% end %>
<% end %>
