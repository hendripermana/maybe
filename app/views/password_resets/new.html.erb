<% header_title t(".title") %>

<%= render Ui::CardComponent.new(
  variant: :elevated,
  size: :lg,
  class: "max-w-md mx-auto mt-8"
) do %>
  <% if params[:step] == "pending" %>
    <div class="text-center">
      <p class="text-sm text-secondary"><%= t(".requested") %></p>
    </div>
  <% else %>
    <%= form_with url: password_reset_path, class: "space-y-4" do |form| %>
      <div class="form-field">
        <div class="form-field__body">
          <%= form.label :email, "Email address", class: "form-field__label" %>
          <%= form.email_field :email, 
              class: "form-field__input", 
              placeholder: "you@example.com",
              autocomplete: "email",
              required: true,
              autofocus: false %>
        </div>
      </div>

      <%= render Ui::ButtonComponent.new(
        text: t(".submit"),
        variant: :primary,
        type: "submit",
        full_width: true
      ) %>
    <% end %>
  <% end %>
<% end %>
