<%= render "layouts/shared/htmldoc" do %>
  <div class="flex flex-col lg:flex-row h-full bg-surface">
    <%# Modern settings navigation sidebar %>
    <div class="p-4 w-full md:w-96 shrink-0 md:h-full md:overflow-y-auto border-r border-border">
      <%= render Ui::SettingsNavComponent.new(current_path: request.path) %>
    </div>

    <%# Main content area %>
    <main class="px-4 pt-2 md:py-6 md:px-10 grow flex h-full overflow-y-auto">
      <div class="relative max-w-4xl mx-auto flex flex-col w-full h-full">
        <div class="grow space-y-6 overflow-y-auto pb-12">
          <%# Breadcrumbs %>
          <% if content_for?(:breadcrumbs) %>
            <%= yield :breadcrumbs %>
          <% else %>
            <%= render "layouts/shared/breadcrumbs", breadcrumbs: @breadcrumbs %>
          <% end %>

          <%# Page title %>
          <% if content_for?(:page_title) %>
            <h1 class="text-primary text-3xl md:text-2xl font-semibold tracking-tight">
              <%= content_for :page_title %>
            </h1>
          <% end %>

          <%# Main content %>
          <%= yield %>
        </div>

        <%# Navigation footer %>
        <div class="mt-6">
          <%= render Ui::SettingsNavFooterComponent.new(current_path: request.path) %>
        </div>
      </div>
    </main>
  </div>
<% end %>
