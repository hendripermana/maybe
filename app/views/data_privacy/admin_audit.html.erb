<% content_for :title, "Data Privacy Audit" %>

<div class="max-w-6xl mx-auto p-6">
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Data Privacy Audit</h1>
      <p class="text-gray-600 mt-2">Detailed audit of data retention and anonymization status</p>
    </div>
    <div>
      <%= link_to "Back to Admin", data_privacy_admin_path, 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- Retention Audit -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Data Retention Audit</h2>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data Type</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Retention Period</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Old Records</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">UI Monitoring Events</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">90 days</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @audit_results[:old_ui_monitoring_events] %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if @audit_results[:old_ui_monitoring_events] > 0 %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Needs Purging
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Compliant
                </span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Resolved Feedback</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">1 year after resolution</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @audit_results[:old_resolved_feedbacks] %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if @audit_results[:old_resolved_feedbacks] > 0 %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Needs Purging
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Compliant
                </span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Unresolved Feedback</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2 years</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @audit_results[:old_unresolved_feedbacks] %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if @audit_results[:old_unresolved_feedbacks] > 0 %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Needs Purging
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Compliant
                </span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Anonymization Audit -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Data Anonymization Audit</h2>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data Type</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Records Needing Anonymization</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">UI Monitoring Events</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @events_needing_anonymization %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if @events_needing_anonymization > 0 %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Needs Anonymization
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Compliant
                </span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">User Feedback</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= @feedback_needing_anonymization %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if @feedback_needing_anonymization > 0 %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Needs Anonymization
                </span>
              <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Compliant
                </span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Data Purging</h2>
      <p class="text-gray-600 mb-4">
        Manually trigger data purging based on retention policies. This will permanently delete old records.
      </p>
      
      <%= form_with url: data_privacy_admin_purge_path, method: :post do |f| %>
        <%= f.submit "Purge Old Data", 
            class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
            data: { confirm: "Are you sure you want to purge old data? This action cannot be undone." } %>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Data Anonymization</h2>
      <p class="text-gray-600 mb-4">
        Manually trigger anonymization of data that still contains personal identifiers.
      </p>
      
      <%= form_with url: data_privacy_admin_anonymize_path, method: :post do |f| %>
        <%= f.submit "Anonymize Data", 
            class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
            data: { confirm: "Are you sure you want to anonymize data with personal identifiers?" } %>
      <% end %>
    </div>
  </div>

  <!-- Export -->
  <div class="mt-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Export Audit Results</h2>
    <p class="text-gray-600 mb-4">
      Export the audit results for compliance reporting.
    </p>
    
    <%= link_to data_privacy_admin_audit_path(format: :json), 
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      Export as JSON
    <% end %>
  </div>
</div>