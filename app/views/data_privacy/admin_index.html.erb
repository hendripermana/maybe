<% content_for :title, "Data Privacy Administration" %>

<div class="max-w-6xl mx-auto p-6">
  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Data Privacy Administration</h1>
    <p class="text-gray-600 mt-2">Manage data retention policies and GDPR compliance</p>
  </div>

  <!-- Data Overview -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex items-center">
        <div class="p-2 bg-blue-100 rounded-lg">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Events</p>
          <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@total_events) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex items-center">
        <div class="p-2 bg-green-100 rounded-lg">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Total Feedback</p>
          <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@total_feedback) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex items-center">
        <div class="p-2 bg-yellow-100 rounded-lg">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Old Events</p>
          <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@old_events) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <div class="flex items-center">
        <div class="p-2 bg-red-100 rounded-lg">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">Old Feedback</p>
          <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@old_feedback) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Retention Policy Status -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Data Retention Status</h2>
    
    <div class="space-y-4">
      <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
        <div>
          <h3 class="font-medium text-gray-900">UI Monitoring Events</h3>
          <p class="text-sm text-gray-600">Retention period: 90 days</p>
        </div>
        <div class="text-right">
          <p class="text-sm font-medium text-gray-900"><%= @retention_audit[:old_ui_monitoring_events] %> old records</p>
          <% if @retention_audit[:old_ui_monitoring_events] > 0 %>
            <p class="text-xs text-red-600">Needs purging</p>
          <% else %>
            <p class="text-xs text-green-600">Compliant</p>
          <% end %>
        </div>
      </div>

      <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
        <div>
          <h3 class="font-medium text-gray-900">Resolved Feedback</h3>
          <p class="text-sm text-gray-600">Retention period: 1 year after resolution</p>
        </div>
        <div class="text-right">
          <p class="text-sm font-medium text-gray-900"><%= @retention_audit[:old_resolved_feedbacks] %> old records</p>
          <% if @retention_audit[:old_resolved_feedbacks] > 0 %>
            <p class="text-xs text-red-600">Needs purging</p>
          <% else %>
            <p class="text-xs text-green-600">Compliant</p>
          <% end %>
        </div>
      </div>

      <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
        <div>
          <h3 class="font-medium text-gray-900">Unresolved Feedback</h3>
          <p class="text-sm text-gray-600">Retention period: 2 years</p>
        </div>
        <div class="text-right">
          <p class="text-sm font-medium text-gray-900"><%= @retention_audit[:old_unresolved_feedbacks] %> old records</p>
          <% if @retention_audit[:old_unresolved_feedbacks] > 0 %>
            <p class="text-xs text-red-600">Needs purging</p>
          <% else %>
            <p class="text-xs text-green-600">Compliant</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Data Purging</h2>
      <p class="text-gray-600 mb-4">
        Manually trigger data purging based on retention policies. This will permanently delete old records.
      </p>
      
      <%= form_with url: data_privacy_admin_purge_path, method: :post do |f| %>
        <%= f.submit "Purge Old Data", 
            class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
            data: { confirm: "Are you sure you want to purge old data? This action cannot be undone." } %>
      <% end %>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Data Anonymization</h2>
      <p class="text-gray-600 mb-4">
        Manually trigger anonymization of data that still contains personal identifiers.
      </p>
      
      <%= form_with url: data_privacy_admin_anonymize_path, method: :post do |f| %>
        <%= f.submit "Anonymize Data", 
            class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
            data: { confirm: "Are you sure you want to anonymize data with personal identifiers?" } %>
      <% end %>
    </div>
  </div>

  <!-- Quick Links -->
  <div class="mt-8 flex justify-center space-x-4">
    <%= link_to "Detailed Audit", data_privacy_admin_audit_path, 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    
    <%= link_to "Monitoring Dashboard", monitoring_path, 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
</div>