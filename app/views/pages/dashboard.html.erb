<% content_for :page_header do %>
  <div class="space-y-1 mb-8 flex gap-4 justify-between items-center lg:items-start">
    <div class="space-y-3">
      <div class="space-y-1">
        <h1 class="text-2xl lg:text-4xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
          Welcome back, <%= Current.user.first_name %>
        </h1>
        <p class="text-base lg:text-lg text-secondary font-medium">Here's what's happening with your finances</p>
      </div>
      <div class="flex items-center gap-2">
        <%= render Ui::BadgeComponent.new(variant: :success, size: :sm) do %>
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse mr-1"></div>
          Last updated: <%= Time.current.strftime("%B %d, %Y at %I:%M %p") %>
        <% end %>
      </div>
    </div>

    <%= render Ui::ButtonComponent.new(
      variant: :default,
      size: :md,
      href: new_account_path,
      class: "hidden lg:inline-flex shadow-lg hover:shadow-xl",
      data: { turbo_frame: :modal }
    ) do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Account
    <% end %>

    <%= render Ui::ButtonComponent.new(
      variant: :default,
      size: :icon,
      href: new_account_path,
      class: "lg:hidden shadow-lg hover:shadow-xl rounded-full",
      data: { turbo_frame: :modal }
    ) do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
    <% end %>
  </div>
<% end %>

<div class="w-full space-y-8 pb-24">
  <% if Current.family.accounts.any? %>
    <%= render Ui::CardComponent.new(variant: :elevated, size: :lg, class: "overflow-hidden") do %>
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 -m-8 mb-6 p-6 border-b border-gray-100">
        <div class="flex items-center gap-3">
          <div class="w-3 h-3 bg-blue-500 rounded-full animate-pulse"></div>
          <h2 class="text-xl font-bold text-gray-900">Net Worth Overview</h2>
          <%= render Ui::BadgeComponent.new(variant: :primary, size: :sm) do %>
            Live Data
          <% end %>
        </div>
      </div>
      <%= render partial: "pages/dashboard/net_worth_chart", locals: {
        balance_sheet: @balance_sheet,
        period: @period
      } %>
    <% end %>
    
    <section class="space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-3">
          <div class="w-1 h-8 bg-gradient-to-b from-blue-500 to-indigo-600 rounded-full"></div>
          Account Overview
        </h2>
        <%= render Ui::BadgeComponent.new(variant: :outline, size: :md, class: "bg-gray-50") do %>
          <div class="w-2 h-2 bg-green-400 rounded-full mr-2"></div>
          <%= Current.family.accounts.count %> accounts connected
        <% end %>
      </div>
      <%= render "pages/dashboard/balance_sheet", balance_sheet: @balance_sheet %>
    </section>

    <%= turbo_frame_tag "cashflow_sankey_section" do %>
      <%= render Ui::CardComponent.new(variant: :elevated, size: :lg, class: "overflow-hidden") do %>
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 -m-8 mb-6 p-6 border-b border-gray-100">
          <div class="flex items-center gap-3">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <h2 class="text-xl font-bold text-gray-900">Cash Flow Analysis</h2>
            <%= render Ui::BadgeComponent.new(variant: :success, size: :sm) do %>
              Updated
            <% end %>
          </div>
        </div>
        <%= render partial: "pages/dashboard/cashflow_sankey", locals: {
          sankey_data: @cashflow_sankey_data,
          period: @cashflow_period
        } %>
      <% end %>
    <% end %>
  <% else %>
    <section>
      <%= render "pages/dashboard/no_accounts_graph_placeholder" %>
    </section>
  <% end %>
</div>
