<%# locals: (balance_sheet:, **args) %>

<div class="grid gap-6 lg:grid-cols-2" id="balance-sheet">
  <% balance_sheet.classification_groups.each_with_index do |classification_group, index| %>
    <%= render Ui::CardComponent.new(variant: :elevated, size: :md, class: "overflow-hidden") do %>
      <!-- Header with gradient background -->
      <div class="bg-gradient-to-r <%= index.even? ? 'from-blue-50 to-indigo-50' : 'from-green-50 to-emerald-50' %> -m-6 mb-6 p-6 border-b border-gray-100">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="w-3 h-3 bg-<%= index.even? ? 'blue' : 'green' %>-500 rounded-full <%= "animate-pulse" if classification_group.syncing? %>"></div>
            <h2 class="text-xl font-bold text-gray-900">
              <%= classification_group.name %>
            </h2>
          </div>

          <% if classification_group.account_groups.any? %>
            <%= render Ui::BadgeComponent.new(variant: :outline, size: :md, class: "bg-white shadow-sm") do %>
              <%= classification_group.total_money.format(precision: 0) %>
            <% end %>
          <% end %>
        </div>
      </div>

      <% if classification_group.account_groups.any? %>
        <div class="space-y-6">
          <!-- Enhanced progress bar with better visual hierarchy -->
          <div class="space-y-3">
            <div class="flex gap-1 h-3 rounded-full overflow-hidden bg-gray-100">
              <% classification_group.account_groups.each do |account_group| %>
                <div class="h-full rounded-sm transition-all duration-500 hover:brightness-110" 
                     style="width: <%= account_group.weight %>%; background-color: <%= account_group.color %>;"
                     title="<%= account_group.name %>: <%= number_to_percentage(account_group.weight, precision: 1) %>">
                </div>
              <% end %>
            </div>

            <!-- Legend with improved layout -->
            <div class="grid grid-cols-1 gap-3">
              <% classification_group.account_groups.each do |account_group| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-100 hover:bg-gray-100 transition-colors">
                  <div class="flex items-center gap-3">
                    <div class="w-4 h-4 rounded-full shadow-sm" style="background-color: <%= account_group.color %>;"></div>
                    <p class="text-gray-700 font-medium"><%= account_group.name %></p>
                  </div>
                  <div class="flex items-center gap-3">
                    <%= render Ui::BadgeComponent.new(variant: :default, size: :sm) do %>
                      <%= number_to_percentage(account_group.weight, precision: 1) %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Enhanced account details table -->
          <%= render Ui::CardComponent.new(variant: :ghost, size: :sm, hover_effect: false, class: "bg-gradient-to-br from-gray-25 to-white border border-gray-100 overflow-hidden") do %>
            <div class="-m-4 mb-4 px-4 py-3 bg-gray-50 border-b border-gray-100">
              <div class="flex items-center justify-between text-xs font-bold text-gray-600 uppercase tracking-wider">
                <div class="flex-1">Account Name</div>
                <div class="w-20 text-center">Weight</div>
                <div class="w-32 text-right">Value</div>
              </div>
            </div>

            <div class="-m-4 divide-y divide-gray-100">
              <% classification_group.account_groups.each_with_index do |account_group, idx| %>
                <details class="group">
                  <summary class="cursor-pointer p-4 hover:bg-gray-50 transition-colors flex items-center justify-between">
                    <div class="flex items-center gap-4 flex-1">
                      <svg class="w-4 h-4 text-gray-400 group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                      <p class="font-semibold text-gray-700"><%= account_group.name %></p>
                    </div>

                    <div class="flex items-center gap-6">
                      <div class="w-20 text-center">
                        <%= render Ui::BadgeComponent.new(variant: :outline, size: :sm) do %>
                          <%= number_to_percentage(account_group.weight, precision: 1) %>
                        <% end %>
                      </div>
                      <div class="w-32 text-right">
                        <p class="font-bold text-gray-900"><%= format_money(account_group.total_money) %></p>
                      </div>
                    </div>
                  </summary>

                  <div class="bg-gray-25 border-t border-gray-100">
                    <% account_group.accounts.each_with_index do |account, idx| %>
                      <div class="pl-12 pr-4 py-3 flex items-center justify-between text-sm hover:bg-white transition-colors">
                        <div class="flex items-center gap-3 flex-1">
                          <%= render "accounts/logo", account: account, size: "sm", color: account_group.color %>
                          <%= link_to account.name, account_path(account), class: "font-medium text-gray-700 hover:text-blue-600 transition-colors" %>
                        </div>

                        <div class="flex items-center gap-6">
                          <div class="w-20 text-center">
                            <%
                                # Calculate weight as percentage of classification total
                                classification_total = classification_group.total_money.amount
                                account_weight = classification_total.zero? ? 0 : account.converted_balance / classification_total * 100
                            %>
                            <%= render Ui::BadgeComponent.new(variant: :default, size: :sm, class: "text-xs") do %>
                              <%= number_to_percentage(account_weight, precision: 1) %>
                            <% end %>
                          </div>
                          <div class="w-32 text-right">
                            <p class="font-semibold text-gray-800"><%= format_money(account.balance_money) %></p>
                          </div>
                        </div>
                      </div>
                      <% if idx < account_group.accounts.size - 1 %>
                        <div class="ml-12 mr-4 border-b border-gray-100"></div>
                      <% end %>
                    <% end %>
                  </div>
                </details>
              <% end %>
            </div>
          <% end %>
        </div>

      <% else %>
        <div class="py-12 flex flex-col items-center text-center space-y-4">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
            <%= render FilledIconComponent.new(
              variant: :container,
              icon: classification_group.icon,
              class: "w-8 h-8 text-gray-400"
            ) %>
          </div>
          <div class="space-y-2">
            <p class="font-semibold text-gray-700">No <%= classification_group.name.downcase %> accounts yet</p>
            <p class="text-sm text-gray-500">Connect your accounts to see them here</p>
          </div>
          <%= render Ui::ButtonComponent.new(variant: :outline, size: :sm, href: new_account_path, data: { turbo_frame: :modal }) do %>
            Add Account
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

          <p class="text-primary text-sm font-medium mb-1 mt-4">No <%= classification_group.name %> yet</p>
          <p class="text-secondary text-sm text-center"><%= "Add your #{classification_group.name} accounts to see a full breakdown" %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<%# Custom style for hiding ruler when details are open %>
<style>
  details[open] + .group-ruler {
    display: none;
  }
</style>
