<% content_for :page_header do %>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-primary">Shadcn UI Components</h1>
      <p class="text-secondary">Modern UI components integrated with the Maybe design system</p>
    </div>
  </div>
<% end %>

<div class="space-y-8">
  <!-- Buttons Section -->
  <section>
    <h2 class="text-xl font-semibold text-primary mb-4">Buttons</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.header do %>
          <h3 class="text-lg font-medium">Button Variants</h3>
        <% end %>
        <% card.content do %>
          <div class="flex flex-wrap gap-2">
            <%= render Ui::ShadcnButtonComponent.new(variant: :default) do %>
              Default
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(variant: :secondary) do %>
              Secondary
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(variant: :destructive) do %>
              Destructive
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(variant: :outline) do %>
              Outline
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(variant: :ghost) do %>
              Ghost
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(variant: :link) do %>
              Link
            <% end %>
          </div>
        <% end %>
      <% end %>

      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.header do %>
          <h3 class="text-lg font-medium">Button Sizes</h3>
        <% end %>
        <% card.content do %>
          <div class="flex flex-wrap items-center gap-2">
            <%= render Ui::ShadcnButtonComponent.new(size: :sm) do %>
              Small
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(size: :default) do %>
              Default
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(size: :lg) do %>
              Large
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(size: :icon) do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.header do %>
          <h3 class="text-lg font-medium">Disabled State</h3>
        <% end %>
        <% card.content do %>
          <div class="flex flex-wrap gap-2">
            <%= render Ui::ShadcnButtonComponent.new(disabled: true) do %>
              Disabled
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(variant: :outline, disabled: true) do %>
              Disabled Outline
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Cards Section -->
  <section>
    <h2 class="text-xl font-semibold text-primary mb-4">Cards</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.header do %>
          <h3 class="text-lg font-medium">Card with Header</h3>
          <p class="text-sm text-secondary">This is a card with a header section</p>
        <% end %>
        <% card.content do %>
          <p class="text-sm text-secondary">
            This is the main content area of the card. It can contain any content you need.
          </p>
        <% end %>
        <% card.footer do %>
          <%= render Ui::ShadcnButtonComponent.new(size: :sm) do %>
            Action
          <% end %>
        <% end %>
      <% end %>

      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.content do %>
          <h3 class="text-lg font-medium mb-2">Simple Card</h3>
          <p class="text-sm text-secondary">
            This is a simple card without header or footer sections.
          </p>
        <% end %>
      <% end %>

      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.header do %>
          <h3 class="text-lg font-medium">Card with Footer</h3>
        <% end %>
        <% card.content do %>
          <p class="text-sm text-secondary">
            This card has a header and footer but no main content.
          </p>
        <% end %>
        <% card.footer do %>
          <div class="flex gap-2">
            <%= render Ui::ShadcnButtonComponent.new(variant: :outline, size: :sm) do %>
              Cancel
            <% end %>
            <%= render Ui::ShadcnButtonComponent.new(size: :sm) do %>
              Save
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Form Elements Section -->
  <section>
    <h2 class="text-xl font-semibold text-primary mb-4">Form Elements</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.header do %>
          <h3 class="text-lg font-medium">Input Fields</h3>
        <% end %>
        <% card.content do %>
          <div class="space-y-4">
            <div>
              <%= render Ui::ShadcnLabelComponent.new(for_attribute: "email") do %>
                Email
              <% end %>
              <%= render Ui::ShadcnInputComponent.new(
                type: :email,
                placeholder: "Enter your email",
                id: "email"
              ) %>
            </div>
            <div>
              <%= render Ui::ShadcnLabelComponent.new(for_attribute: "password") do %>
                Password
              <% end %>
              <%= render Ui::ShadcnInputComponent.new(
                type: :password,
                placeholder: "Enter your password",
                id: "password"
              ) %>
            </div>
            <div>
              <%= render Ui::ShadcnLabelComponent.new(for_attribute: "disabled") do %>
                Disabled Input
              <% end %>
              <%= render Ui::ShadcnInputComponent.new(
                placeholder: "This input is disabled",
                id: "disabled",
                disabled: true
              ) %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= render Ui::ShadcnCardComponent.new do |card| %>
        <% card.header do %>
          <h3 class="text-lg font-medium">Badges</h3>
        <% end %>
        <% card.content do %>
          <div class="flex flex-wrap gap-2">
            <%= render Ui::ShadcnBadgeComponent.new do %>
              Default
            <% end %>
            <%= render Ui::ShadcnBadgeComponent.new(variant: :secondary) do %>
              Secondary
            <% end %>
            <%= render Ui::ShadcnBadgeComponent.new(variant: :destructive) do %>
              Destructive
            <% end %>
            <%= render Ui::ShadcnBadgeComponent.new(variant: :outline) do %>
              Outline
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Alerts Section -->
  <section>
    <h2 class="text-xl font-semibold text-primary mb-4">Alerts</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= render Ui::ShadcnAlertComponent.new do |alert| %>
        <% alert.title do %>
          Default Alert
        <% end %>
        <% alert.description do %>
          This is a default alert with a title and description.
        <% end %>
      <% end %>

      <%= render Ui::ShadcnAlertComponent.new(variant: :destructive) do |alert| %>
        <% alert.title do %>
          Destructive Alert
        <% end %>
        <% alert.description do %>
          This is a destructive alert for important warnings.
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Tabs Section -->
  <section>
    <h2 class="text-xl font-semibold text-primary mb-4">Tabs</h2>
    <%= render Ui::ShadcnCardComponent.new do |card| %>
      <% card.content do %>
        <%= render Ui::ShadcnTabsComponent.new(default_value: "account") do |tabs| %>
          <% tabs.tab(value: "account") do %>
            Account
          <% end %>
          <% tabs.tab(value: "password") do %>
            Password
          <% end %>
          <% tabs.tab(value: "settings") do %>
            Settings
          <% end %>
        <% end %>
        
        <div class="mt-4 p-4 bg-muted rounded-md">
          <p class="text-sm text-secondary">
            Tab content would be displayed here based on the selected tab.
          </p>
        </div>
      <% end %>
    <% end %>
  </section>

  <!-- Dialog Section -->
  <section>
    <h2 class="text-xl font-semibold text-primary mb-4">Dialog</h2>
    <%= render Ui::ShadcnCardComponent.new do |card| %>
      <% card.content do %>
        <%= render Ui::ShadcnDialogComponent.new do |dialog| %>
          <% dialog.trigger do %>
            <%= render Ui::ShadcnButtonComponent.new do %>
              Open Dialog
            <% end %>
          <% end %>
          <% dialog.header do %>
            <h3 class="text-lg font-medium">Dialog Title</h3>
            <p class="text-sm text-secondary">This is a dialog description.</p>
          <% end %>
          <% dialog.content do %>
            <p class="text-sm text-secondary">
              This is the main content of the dialog. It can contain any content you need.
            </p>
          <% end %>
          <% dialog.footer do %>
            <div class="flex gap-2">
              <%= render Ui::ShadcnButtonComponent.new(variant: :outline, size: :sm) do %>
                Cancel
              <% end %>
              <%= render Ui::ShadcnButtonComponent.new(size: :sm) do %>
                Confirm
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </section>
</div> 