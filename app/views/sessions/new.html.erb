<%
  header_title t(".title")
%>

<%= render Ui::CardComponent.new(
  variant: :elevated,
  size: :lg,
  class: "max-w-md mx-auto mt-8"
) do %>
  <%= form_with url: sessions_path, method: :post, class: "space-y-4", data: { turbo: false } do |form| %>
    <div class="form-field">
      <div class="form-field__body">
        <%= form.label :email, t(".email"), class: "form-field__label" %>
        <%= form.email_field :email, 
            class: "form-field__input", 
            placeholder: t(".email_placeholder"),
            autocomplete: "email",
            required: true,
            autofocus: true %>
      </div>
    </div>

    <div class="form-field">
      <div class="form-field__body">
        <%= form.label :password, t(".password"), class: "form-field__label" %>
        <%= form.password_field :password, 
            class: "form-field__input", 
            placeholder: t(".password_placeholder"),
            autocomplete: "current-password",
            required: true %>
      </div>
    </div>

    <%= render Ui::ButtonComponent.new(
      text: t(".submit"),
      variant: :primary,
      type: "submit",
      full_width: true
    ) %>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to t(".forgot_password"), new_password_reset_path, class: "text-sm text-primary hover:underline transition" %>
  </div>
<% end %>
